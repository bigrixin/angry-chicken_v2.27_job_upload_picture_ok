@model MyAbilityFirst.Models.ShortlistViewModel

<button id="shortlist-toggle-btn" class="@(Model.Selected ? "btn btn-success btn-lg" : "btn btn-default btn-lg")" data-loading-text="<i class='glyphicon glyphicon-hourglass'></i>" type="button"
				onclick="PostAJAX('@(Url.Action("UpdateShortlist", "Client", Model))', {CareWorkerID: @Model.CareWorkerID, Selected: @Json.Encode(Model.Selected)}, '#shortlist-toggle-btn', 'btn-success btn-default')">
	<i class="glyphicon glyphicon-star" id="shortlist-toggle-icon"></i>
</button>

@section Scripts {
	<script src="~/Scripts/Shared/site.js" type="text/javascript"></script>
}