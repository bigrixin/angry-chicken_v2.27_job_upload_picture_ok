@using MvcCheckBoxList.Model
@model MyAbilityFirst.Models.ClientDetailsViewModel

@{
    ViewBag.Title = "MyAccount";
}

<div class="col-md-3">
    @Html.Action("_MyAccountSidebar", "MyAccount")
</div>

    <div class="col-md-9">

        <div>
            <h1 class="page-header">
                Profile
                @Html.ActionLink("Edit", "EditProfile", "Client", null, new { @class = "btn btn-default" })
            </h1>
        </div>    

        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.FirstName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.LastName)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.LastName)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DoB)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DoB)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Gender)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Gender)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Email)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Email)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Phone)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Phone)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Suburb)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Suburb)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Notifications)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Notifications)
            </dd>


            <dt>
                @Html.DisplayNameFor(model => model.Disclaimers)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Disclaimers)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.ProvisionLocation)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.ProvisionLocation)
            </dd>

            <dt>
                @Html.Label("How did you hear about us?", htmlAttributes: new { @class = "control-label col-md-2" })
            </dt>

            <dd>
                @Html.CheckBoxListFor(
                model => model.PostedMarketingInfo,
                model => model.MarketingInfoList,
                item => item.ID,
                item => item.Name,
                model => model.PreviousMarketingInfo,
                Position.Vertical,
                x => new { disabled = "disabled" })
            </dd>

        </dl>

        <div>
            <h1 class="page-header">
                @Html.ActionLink("Edit", "EditProfile", "Client", null, new { @class = "btn btn-default" })
            </h1>
        </div>

</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
